
@model miniFacebook.view_Models.RegisterationModel;


@{
    ViewData["Title"] = "Register";
    Layout = "_AccountNav";
}
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - miniFacebook</title>
    <link rel="stylesheet" href="~/css/Register.css" /> <!-- Add this line -->
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="all_body">
 <div class="row ">
        <div class=" col-md-6 logo_body ">
    <img class="logobdy" src="~/images/fbbdy.png">
    <p class="like_font font1">Thanks for stopping by!</p>
    <p class="like_font">We hope to see you again soon.</p>
</div>



        <div class="col-md-4 signup_body ">
            <p class="acc_crt">Create an account</p>
            <p class="free_hint">It's free and always will be.</p>
                <form asp-action="Register" class=".login_form"  >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mt-5">
            <div class="form-group  col-md-6 ">
               
                            <input asp-for="fullname" class="form-control fullname Inputclass" placeholder="Full name" />
                <span asp-validation-for="fullname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 ">
           
                <input asp-for="UserName" class="form-control username Inputclass" placeholder="User name"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
        
                        <input asp-for="Email" class="form-control Inputclass" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                
                <input asp-for="Password" class="form-control password Inputclass" placeholder="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <label asp-for="ConfirmPassword" class="control-label"></label> *@
                    <input asp-for="ConfirmPassword" class="form-control passwordOne Inputclass" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
                    <div class="form-group">

                        <fieldset class="form-group">
                            <div class="row ms-5">

                                <div class="form-check col-3 ">
                                    <input class="form-check-input" type="radio" name="gender" id="maleRadio" value="Male" checked>
                                    <label class="form-check-label" for="maleRadio">Male</label>
                                </div>
                                <div class="form-check col-3">
                                    <input class="form-check-input" type="radio" name="gender" id="femaleRadio" value="Female">
                                    <label class="form-check-label" for="femaleRadio">Female</label>
                                </div>

                            </div>
                            <span asp-validation-for="gender" class="text-danger"></span>
                        </fieldset>

                    </div>
            <div class="form-group">
                    <p class="agreement">By clicking Sign Up, you agree to our <a href="#">Terms, Data Policy and Cookies Policy.</a> You may receive SMS Notifications from us and can opt out any time.</p>
                      <input type="submit" value="Sign Up" class="signup" />
            </div>
        </form>
    </div>
</div>
</div>

</div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
