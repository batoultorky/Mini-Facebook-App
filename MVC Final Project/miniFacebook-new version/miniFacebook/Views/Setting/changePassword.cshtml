@model miniFacebook.view_Models.changePasswordModel

@{
    ViewData["Title"] = "changePassword";
}

<div class="container mt-5">
    <h1 class="text-primary mt-3" style="">Change Password</h1>

<hr />
<div class="row">
    <div class="col-md-12  ">
        <form asp-action="changePassword" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label  class="control-label">Old Password</label>
                <input asp-for="oldPassword" class="form-control" />
                <span asp-validation-for="oldPassword" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label  class="control-label">New Password</label>
                <input asp-for="newPassword" class="form-control" />
                <span asp-validation-for="newPassword" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label  class="control-label ">Confirm Password</label>
                <input asp-for="confirmNewPassword" class="form-control" />
                <span asp-validation-for="confirmNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save Change" class="btn btn-primary" />
                <a asp-controller="profile" asp-action="profile" class="btn btn-dark mx-2">Back To Profile</a>
             
            </div>
        </form>
    </div>
</div>
  

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
